.panel.panel-default
  .panel-heading.clearfix
    .input-group
      = search_field_tag :filter_projects, nil, placeholder: 'Фильтр по наименованию', class: 'projects-list-filter form-control'
      - if can? current_user, :create_projects, @group
        %span.input-group-btn
          = link_to new_project_path(namespace_id: @group.id), class: 'btn btn-success' do
            Новый проект

  = render 'shared/projects_list', projects: @projects, projects_limit: 20
