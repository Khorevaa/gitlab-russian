= form_for [@project.namespace.becomes(Namespace), @project, @issue], remote: true, html: {class: 'edit-issue inline-update'} do |f|
  %div.prepend-top-20
    .issuable-context-title
      %label
        Предназначен:
      - if issue.assignee
        %strong= link_to_member(@project, @issue.assignee, size: 24)
      - else
        нет
    - if can?(current_user, :modify_issue, @issue)
      = project_users_select_tag('issue[assignee_id]', placeholder: 'Выбрать пользователя', class: 'custom-form-control js-select2 js-assignee', selected: @issue.assignee_id)

  %div.prepend-top-20.clearfix
    .issuable-context-title
      %label
        Итерация:
      - if issue.milestone
        %span.back-to-milestone
          = link_to namespace_project_milestone_path(@project.namespace, @project, @issue.milestone) do
            %strong
              %i.fa.fa-clock-o
              = @issue.milestone.title
      - else
        нет
    - if can?(current_user, :modify_issue, @issue)
      = f.select(:milestone_id, milestone_options(@issue), { include_blank: "Выбрать итерацию" }, {class: 'select2 select2-compact js-select2 js-milestone'})
      = hidden_field_tag :issue_context
      = f.submit class: 'btn'

  - if current_user
    %div.prepend-top-20.clearfix
      .issuable-context-title
        %label
          Подписка:
      %button.btn.btn-block.subscribe-button
        %i.fa.fa-eye
        %span= @issue.subscribed?(current_user) ? "Отказаться от подписки" : "Подписаться"
      - subscribtion_status = @issue.subscribed?(current_user) ? "subscribed" : "unsubscribed"
      .subscription-status{"data-status" => subscribtion_status}
        .description-block.unsubscribed{class: ( "hidden" if @issue.subscribed?(current_user) )}
          Вы не получаете уведомлений из этого потока.
        .description-block.subscribed{class: ( "hidden" unless @issue.subscribed?(current_user) )}
          Вы получаете уведомления, потому что вы подписались на этот поток.

:coffeescript
  $ ->
    new Subscription("#{toggle_subscription_namespace_project_issue_path(@issue.project.namespace, @project, @issue)}")


