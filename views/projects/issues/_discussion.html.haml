- content_for :note_actions do
  - if can?(current_user, :update_issue, @issue)
    = link_to 'Возобновить вопрос', issue_path(@issue, issue: {state_event: :reopen}, status_only: true, format: 'json'), data: {no_turbolink: true}, class: "btn btn-nr btn-grouped btn-reopen btn-comment js-note-target-reopen #{issue_button_visibility(@issue, false)}", title: 'Возобновить вопрос'
    = link_to 'Закрыть вопрос', issue_path(@issue, issue: {state_event: :close}, status_only: true, format: 'json'), data: {no_turbolink: true}, class: "btn btn-nr btn-grouped btn-close btn-comment js-note-target-close #{issue_button_visibility(@issue, true)}", title: 'Закрыть вопрос'

#notes
  = render 'projects/notes/notes_with_form'
