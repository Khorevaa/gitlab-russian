= form_for [@project.namespace.becomes(Namespace), @project, @note], remote: true, html: { :'data-type' => 'json', multipart: true, id: nil, class: "new_note js-new-note-form common-note-form gfm-form" }, authenticity_token: true do |f|
  = note_target_fields(@note)
  = f.hidden_field :commit_id
  = f.hidden_field :line_code
  = f.hidden_field :noteable_id
  = f.hidden_field :noteable_type

  = render layout: 'projects/md_preview', locals: { preview_class: "note-text" } do
    = render 'projects/zen', f: f, attr: :note,
      classes: 'note_text js-note-text'

    .comment-hints.clearfix
      .pull-left Комментарии форматируются с помощью #{link_to "GitLab Flavored Markdown", help_page_path("markdown", "markdown"),{ target: '_blank', tabindex: -1 }}
      .pull-right Прикрепите файлы путем перетаскивания или #{link_to "выберите их", '#', class: 'markdown-selector', tabindex: -1 }.


  .note-form-actions
    .buttons
      = f.submit 'Добавить комментарий', class: "btn comment-btn btn-grouped js-comment-button"
      = yield(:note_actions)
      %a.btn.grouped.js-close-discussion-note-form Отмена

:javascript
  window.project_uploads_path = "#{namespace_project_uploads_path @project.namespace, @project}";
